# üîß Environment Configuration Template
# Copy this file to .env and customize for your environment
# This file contains environment-specific settings that reference api_keys.env

# ==============================================================================
# üåç ENVIRONMENT SETTINGS
# ==============================================================================
# Current environment: development, staging, production
ENVIRONMENT=development

# Debug mode for development
DEBUG_MODE=true

# App version and build info
APP_VERSION=1.0.0
BUILD_NUMBER=1

# ==============================================================================
# üîó SERVICE URLS
# ==============================================================================
# API base URL
API_BASE_URL=https://api.patra-dating.com

# WebSocket URL for real-time features
WEBSOCKET_URL=wss://ws.patra-dating.com

# Content delivery network
CDN_BASE_URL=https://cdn.patra-dating.com

# ==============================================================================
# ü§ñ FEATURE FLAGS
# ==============================================================================
# Enable/disable features based on environment
PREMIUM_FEATURES_ENABLED=false
CHAT_ENABLED=true
VIDEO_CALL_ENABLED=false
LOCATION_SERVICES_ENABLED=true
PUSH_NOTIFICATIONS_ENABLED=true
ANALYTICS_ENABLED=true

# Social authentication
GOOGLE_AUTH_ENABLED=true
FACEBOOK_AUTH_ENABLED=true
APPLE_AUTH_ENABLED=true

# ==============================================================================
# üì± APP CONFIGURATION
# ==============================================================================
# User limits and quotas
MAX_PHOTOS_PER_USER=6
MAX_SWIPES_PER_DAY=100
MAX_MATCHES_PER_REQUEST=20
MAX_CHAT_MESSAGES_PER_MINUTE=10

# Content restrictions
MIN_AGE=18
MAX_AGE=100
MAX_DISTANCE_KM=100

# ==============================================================================
# ‚ö° PERFORMANCE SETTINGS
# ==============================================================================
# API timeouts (in milliseconds)
API_TIMEOUT_MS=30000
IMAGE_UPLOAD_TIMEOUT_MS=60000

# Cache settings
CACHE_DURATION_MINUTES=30
IMAGE_CACHE_SIZE_MB=100

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100

# ==============================================================================
# üîê SECURITY SETTINGS
# ==============================================================================
# JWT token expiration
JWT_EXPIRATION_HOURS=24
JWT_REFRESH_EXPIRATION_DAYS=30

# Rate limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_REQUESTS_PER_HOUR=1000

# Password requirements
MIN_PASSWORD_LENGTH=8
REQUIRE_SPECIAL_CHARACTERS=true

# ==============================================================================
# üìä ANALYTICS & MONITORING
# ==============================================================================
# Logging level: debug, info, warning, error
LOG_LEVEL=debug

# Error reporting
CRASH_REPORTING_ENABLED=true
PERFORMANCE_MONITORING_ENABLED=true

# Analytics sampling rate (0.0 to 1.0)
ANALYTICS_SAMPLING_RATE=1.0

# ==============================================================================
# üí∞ SUBSCRIPTION & PRICING
# ==============================================================================
# Subscription tiers
BASIC_TIER_ENABLED=true
PREMIUM_TIER_ENABLED=true
VIP_TIER_ENABLED=false

# Pricing (in cents)
PREMIUM_MONTHLY_PRICE=999
PREMIUM_YEARLY_PRICE=7999

# ==============================================================================
# üåê LOCALIZATION
# ==============================================================================
# Default language and region
DEFAULT_LANGUAGE=en
DEFAULT_COUNTRY=US
SUPPORTED_LANGUAGES=en,es,fr,de,pt,it

# Date and time formats
DATE_FORMAT=MM/dd/yyyy
TIME_FORMAT=12h

# ==============================================================================
# üì± PLATFORM-SPECIFIC
# ==============================================================================
# iOS-specific settings
IOS_MIN_VERSION=13.0
IOS_APP_STORE_ID=123456789

# Android-specific settings
ANDROID_MIN_SDK_VERSION=21
ANDROID_TARGET_SDK_VERSION=34
ANDROID_PACKAGE_NAME=com.patra.dating

# Web-specific settings
WEB_APP_TITLE=Patra Dating App
WEB_META_DESCRIPTION=Find your perfect match with AI-powered dating

# ==============================================================================
# üîß DEVELOPMENT TOOLS
# ==============================================================================
# Hot reload and debugging
HOT_RELOAD_ENABLED=true
FLUTTER_WEB_HOT_RESTART=true

# Test data generation
GENERATE_TEST_DATA=true
TEST_USER_COUNT=50

# Mock services for development
MOCK_PAYMENT_SERVICE=true
MOCK_NOTIFICATIONS=false

# ==============================================================================
# üì§ DEPLOYMENT SETTINGS
# ==============================================================================
# Build optimization
TREE_SHAKE_ICONS=true
MINIFY_CODE=true
OBFUSCATE_CODE=false

# Asset optimization
COMPRESS_IMAGES=true
OPTIMIZE_FONTS=true

# ==============================================================================
# üö® ENVIRONMENT-SPECIFIC OVERRIDES
# ==============================================================================
# These will override api_keys.env values if set

# Development Firebase project
# FIREBASE_PROJECT_ID=patra-dating-dev

# Staging Cloudinary account
# CLOUDINARY_CLOUD_NAME=patra-staging

# ==============================================================================
# üìù NOTES
# ==============================================================================
# - Variables in this file can override api_keys.env values
# - Use UPPERCASE_WITH_UNDERSCORES for variable names
# - Boolean values should be 'true' or 'false' (lowercase)
# - Numbers should not have quotes
# - Strings with spaces should be quoted
# - URLs should include protocol (http:// or https://)
# - File paths should use forward slashes (/) even on Windows