rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // User documents - users can read/write their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      // Allow reading other users for matching (but not writing)
      allow read: if request.auth != null;
    }
    
    // Matches collection - users can manage their own matches
    match /matches/{matchId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid in resource.data.users || 
         request.auth.uid in request.resource.data.users);
    }
    
    // Messages collection - users can access their conversation messages
    match /messages/{messageId} {
      allow read, write: if request.auth != null && 
        (request.auth.uid == resource.data.senderId || 
         request.auth.uid == resource.data.receiverId);
    }
    
    // Reports collection - authenticated users can report issues
    match /reports/{reportId} {
      allow create: if request.auth != null;
      allow read, write: if false; // Only admins should access (implement admin check later)
    }
  }
}